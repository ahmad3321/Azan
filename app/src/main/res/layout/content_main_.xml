<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity2"
    tools:showIn="@layout/app_bar_main_"
    style="@style/parent.contentLayout"
    android:background="#00000000">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/Main_Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ssa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_alignBottom="@+id/ssa"
                    android:orientation="vertical">

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="20dp"
                        android:text="تطبيق الأذان"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/jaz"
                        android:text="إدلب"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/lll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="60dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_awqaf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/card_azan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_gradient_maths"
                            android:minHeight="100dp"
                            android:padding="10dp">

                            <ImageView
                                style="@style/homeCardImage"
                                android:maxHeight="90dp"
                                android:src="@drawable/ic_azan" />

                            <TextView
                                android:id="@+id/textViewSub1Title"
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:text="الأذان" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/card_azkar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_gradient_maths"
                            android:minHeight="100dp"
                            android:padding="10dp">

                            <ImageView
                                style="@style/homeCardImage"
                                android:maxHeight="90dp"
                                android:src="@drawable/ic_azkar" />

                            <TextView
                                android:id="@+id/textViewSub3Title"
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:text="الأذكار" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/home_gradient_maths"

                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                android:src="@drawable/home_ic_biology"
                                style="@style/homeCardImage"/>

                            <TextView
                                android:id="@+id/textViewSub5Title"
                                android:text=""
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/card_qibla"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/home_gradient_maths"
                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                android:src="@drawable/ic_qibla"
                                style="@style/homeCardImage"/>

                            <TextView
                                android:id="@+id/textViewSub2Title"
                                android:text="القبلة"
                                style="@style/viewParent.headerText.HomeCardTitle" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/card_counter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_gradient_maths"
                            android:minHeight="100dp"

                            android:padding="10dp">

                            <ImageView
                                style="@style/homeCardImage"
                                android:maxHeight="90dp"
                                android:src="@drawable/ic_counter_m" />

                            <TextView
                                android:id="@+id/textViewSub4Title"
                                style="@style/viewParent.headerText.HomeCardTitle"
                                android:text="العداد" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="100dp"
                            android:background="@drawable/home_gradient_maths"

                            android:padding="10dp">

                            <ImageView
                                android:maxHeight="90dp"
                                android:src="@drawable/home_ic_biology"
                                style="@style/homeCardImage" />

                            <TextView
                                android:text=""
                                style="@style/viewParent.headerText.HomeCardTitle" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/home_gradient_maths1"
                >

                <TextView
                    android:id="@+id/t_imsak"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:fontFamily="@font/jaze"
                    android:text="@string/imsak"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_salat" />

                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:id="@+id/t_imsak1"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_gradient_maths"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/t_faj"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/jaze"
                    android:text="@string/faj"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_salat" />

                <TextView
                    android:id="@+id/t_faj1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:layout_marginTop="@dimen/margin_rect_top"
                android:background="@drawable/home_gradient_maths1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/t_duha"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/jaze"
                    android:text="@string/Shoroq"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_salat" />

                <TextView
                    android:id="@+id/t_duha1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_rect_top"
                android:background="@drawable/home_gradient_maths"
                >

                <TextView
                    android:text="@string/dhuhor"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaze"
                    android:textSize="@dimen/font_salat"
                    android:textAlignment="textStart"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_marginRight="30dp"
                    android:id="@+id/t_dhuhor"
                    />

                <TextView
                    android:id="@+id/t_dhuhor1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:layout_marginTop="@dimen/margin_rect_top"
                android:background="@drawable/home_gradient_maths1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/t_asr"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/jaze"
                    android:text="@string/Asr"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_salat" />

                <TextView
                    android:id="@+id/t_asr1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_rect_top"
                android:background="@drawable/home_gradient_maths"

                >

                <TextView
                    android:text="@string/Moghrib"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaze"
                    android:textSize="@dimen/font_salat"
                    android:textAlignment="textStart"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:id="@+id/t_moghrib"
                    />
                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:id="@+id/t_moghrib1"
                    android:textColor="@color/white"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hi_rect"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_rect_top"
                android:layout_marginBottom="60dp"
                android:background="@drawable/home_gradient_maths1"
                >

                <TextView
                    android:text="@string/esh"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jaze"
                    android:textSize="@dimen/font_salat"
                    android:textAlignment="textStart"
                    android:layout_width="90dp"
                    android:layout_marginStart="@dimen/margin_rect_start"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:id="@+id/t_eshaa"
                    />
                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/margin_rect_start_time"
                    android:id="@+id/t_eshaa1"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
